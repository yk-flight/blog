<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zrkizzy.data.mapper.ModuleRoleMapper">

    <!-- 删除指定角色具有的所有请求权限 -->
    <delete id="deleteByRoleId"></delete>

    <resultMap id="ModuleTreeVO" type="com.zrkizzy.data.vo.resource.ModuleTreeVO">
        <id column="id" property="id" />
        <result column="label" property="label" />
    </resultMap>

    <!-- 获取指定角色具有的模块权限 -->
    <select id="listModuleByRoleId" resultMap="ModuleTreeVO">
        SELECT
            m.id AS id,
            m.name AS label
        FROM
            tb_module_role mr
        INNER JOIN tb_module m
                    ON mr.module_id = m.id
        WHERE mr.role_id = #{roleId}

    </select>
</mapper>